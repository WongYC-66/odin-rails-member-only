
<% if user_signed_in? %>
    <h1>All Posts, Hello <%= current_user.username %></h1>
    <p>You are signed in now.</p>
    <%= link_to "New Post",  new_post_path %>
    <%= link_to "Sign Out",  destroy_user_session_path %>
<% else %>
    <h1> All Posts </h1>
    <%= link_to "Register user", new_user_registration_path %>
    <%= link_to "Sign in", new_user_session_path %>
<% end %>

<br>

<% @posts.each do |post| %>
    <div>
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
        <% if user_signed_in? %>
            <p><%= post.user.username %></p>
        <% end %>
    </div>
<% end %>